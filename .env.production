# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Copy these values to DigitalOcean App Platform console
# DO NOT commit this file with real secrets!

# Server Configuration
NODE_ENV=production
PORT=5050

# Security & Authentication
# IMPORTANT: Generate new secrets for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_SECRET_FOR_PRODUCTION
SESSION_SECRET=GENERATE_NEW_SECRET_FOR_PRODUCTION
BCRYPT_ROUNDS=12
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS & Allowed Origins
# Update with your actual domain after purchase
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
TRUST_PROXY=true

# Database Configuration
DATABASE_PATH=/data/revenue-radar.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=12
DATABASE_BACKUP_RETENTION_DAYS=30
DATABASE_BACKUP_PATH=/data/backups

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# Claude AI Configuration
ANTHROPIC_API_KEY=your-production-anthropic-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Web Scraper (Tier 4)
WEB_SCRAPER_ENABLE=1
WEB_SCRAPER_RATE_LIMIT_MS=2000
WEB_SCRAPER_MAX_PAGES=15
WEB_SCRAPER_TIMEOUT_MS=30000

# OpenStreetMap (Tier 3)
OSM_ENABLE=1
OSM_LEADS_TIMEOUT_MS=3500

# Premium Contact APIs (Optional - Add if you have them)
# ROCKETREACH_API_KEY=your_key_here
# HUNTER_IO_API_KEY=your_key_here
# GOOGLE_CUSTOM_SEARCH_API_KEY=your_key_here
# GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_id_here
# GOOGLE_PLACES_API_KEY=your_key_here

# Email Configuration (Recommended for production)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_FROM_NAME=Revenue Radar

# S3 Backup Configuration (Recommended for production backups)
S3_BACKUP_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# SSL/HTTPS (DigitalOcean handles this automatically)
HTTPS_ENABLED=false
FORCE_HTTPS=false

# Feature Flags
FEATURES_BACKUP_SERVICE=true
FEATURES_HEALTH_MONITORING=true
FEATURES_USER_MANAGEMENT=true
